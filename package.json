{
  "private": true,
  "name": "xo-server",
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "description": "Server part of Xen Orchestra",
  "keywords": [
    "orchestra",
    "server",
    "xen",
    "xen-orchestra"
  ],
  "homepage": "https://github.com/vatesfr/xo-server/",
  "bugs": "https://github.com/vatesfr/xo-web/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/vatesfr/xo-server.git"
  },
  "author": {
    "name": "Julien Fontanet",
    "email": "julien.fontanet@isonoe.net"
  },
  "preferGlobal": true,
  "main": "dist/",
  "bin": {
    "xo-server": "dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "app-conf": "^0.4.0",
    "babel-runtime": "^6.11.6",
    "bluebird": "^3.4.6",
    "event-to-promise": "^0.7.0",
    "graphql": "^0.7.2",
    "http-request-plus": "0.0.0",
    "http-server-plus": "^0.7.0",
    "immutable": "^3.8.1",
    "index-modules": "0.1.0",
    "lodash": "^4.16.1",
    "promise-toolbox": "^0.7.0",
    "rxjs": "^5.0.0-beta.12",
    "spdy": "^3.4.2",
    "uuid": "^2.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-lodash": "^3.2.9",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-babili": "^0.0.5",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-stage-0": "^6.5.0",
    "cross-env": "^3.1.3",
    "dependency-check": "^2.6.0",
    "ghooks": "^1.3.2",
    "jest": "^16.0.0",
    "rimraf": "^2.5.4",
    "standard": "^8.1.0"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run index-modules && cross-env NODE_ENV=production babel --source-maps --out-dir=dist/ src/",
    "clean": "rimraf dist/",
    "depcheck": "dependency-check ./package.json",
    "predev": "npm run clean",
    "dev": "npm run index-modules && cross-env NODE_ENV=development babel --watch --source-maps --out-dir=dist/ src/",
    "dev-test": "jest --watch",
    "index-modules": "index-modules --auto src/",
    "lint": "standard",
    "posttest": "npm run lint",
    "prepublish": "npm run build",
    "start": "node dist/index.js",
    "test": "jest"
  },
  "babel": {
    "env": {
      "production": {
        "comments": false,
        "presets": [
          "babili"
        ]
      }
    },
    "plugins": [
      "lodash",
      "transform-decorators-legacy",
      "transform-flow-strip-types",
      "transform-runtime"
    ],
    "presets": [
      "latest",
      "stage-0"
    ]
  },
  "config": {
    "ghooks": {
      "commit-msg": "npm test"
    }
  },
  "jest": {
    "testPathIgnorePatterns": ["<rootDir>/node_modules"]
  },
  "standard": {
    "ignore": [
      "dist"
    ],
    "parser": "babel-eslint"
  }
}
