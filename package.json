{
  "private": true,
  "name": "xo-server",
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "description": "Server part of Xen Orchestra",
  "keywords": [
    "orchestra",
    "server",
    "xen",
    "xen-orchestra"
  ],
  "homepage": "https://github.com/vatesfr/xo-server/",
  "bugs": "https://github.com/vatesfr/xo-web/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/vatesfr/xo-server.git"
  },
  "author": {
    "name": "Julien Fontanet",
    "email": "julien.fontanet@isonoe.net"
  },
  "preferGlobal": true,
  "main": "dist/",
  "bin": {
    "xo-server": "dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "app-conf": "^0.4.1",
    "babel-runtime": "^6.20.0",
    "base64url": "^2.0.0",
    "bind-property-descriptor": "^0.0.0",
    "bluebird": "^3.4.6",
    "cuid": "^1.3.8",
    "event-to-promise": "^0.7.0",
    "graphql": "^0.8.2",
    "http-request-plus": "0.0.0",
    "http-server-plus": "^0.8.0",
    "immutable": "^3.8.1",
    "index-modules": "^0.2.1",
    "jsonwebtoken": "^7.2.1",
    "lodash": "^4.17.2",
    "promise-toolbox": "^0.7.0",
    "spdy": "^3.4.4",
    "uuid": "^3.0.1",
    "zen-observable": "^0.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-env": "^1.1.4",
    "babel-preset-stage-3": "^6.17.0",
    "cross-env": "^3.1.3",
    "dependency-check": "^2.6.0",
    "husky": "^0.12.0",
    "jest": "^18.0.0",
    "rimraf": "^2.5.4",
    "standard": "^8.6.0"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production babel --source-maps --out-dir=dist/ src/",
    "commit-msg": "npm test",
    "dev": "cross-env NODE_ENV=development babel --watch --source-maps --out-dir=dist/ src/",
    "dev-test": "jest --bail --watch",
    "posttest": "standard && dependency-check ./package.json",
    "prebuild": "rimraf dist/ && index-modules --auto src/",
    "predev": "npm run prebuild",
    "prepublish": "npm run build",
    "start": "node dist/index.js",
    "test": "jest"
  },
  "babel": {
    "comments": false,
    "plugins": [
      "lodash",
      "transform-decorators-legacy",
      "transform-flow-strip-types",
      "transform-runtime"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          }
        }
      ],
      "stage-3"
    ]
  },
  "jest": {
    "testPathDirs": [
      "<rootDir>/src"
    ]
  },
  "standard": {
    "ignore": [
      "dist"
    ],
    "parser": "babel-eslint"
  }
}
